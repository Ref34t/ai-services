includes:
	- phar://phpstan.phar/conf/bleedingEdge.neon
parameters:
	bootstrapFiles:
		- php-tools/phpstan-bootstrap.php
	level: 6
	paths:
		- includes/
		- wp-starter-plugin.php
		- constants.php
		- uninstall.php
	scanDirectories:
		- third-party
	scanFiles:
		- php-tools/vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
		- php-tools/vendor/php-stubs/wp-cli-stubs/wp-cli-stubs.php
		- php-tools/vendor/php-stubs/wp-cli-stubs/wp-cli-commands-stubs.php
		- php-tools/vendor/php-stubs/wp-cli-stubs/wp-cli-i18n-stubs.php
	treatPhpDocTypesAsCertain: false
